@model PageHeaderViewModel

<div class="card mb-5 mt-5">
    <div class="card-body py-4">
        <div class="d-flex flex-column flex-md-row flex-stack gap-3">

            <div class="page-title d-flex flex-column justify-content-center align-items-center align-items-md-start">
                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-5 flex-column justify-content-center my-0">
                    @Model.Title
                </h1>
            </div>

            <div class="d-flex align-items-center justify-content-center justify-content-md-end">
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-8 text-gray-600 my-0">
                    <li class="breadcrumb-item">
                        <a href="/" class="text-gray-600 text-hover-primary">Anasayfa</a>
                    </li>
                    @if (Model.ParentName is not null)
                    {
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px mx-2"></span>
                        </li>
                        <li class="breadcrumb-item text-gray-600">
                            @Model.ParentName
                        </li>
                    }
                    @if (Model.ChildName is not null)
                    {
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px mx-2"></span>
                        </li>
                        <li class="breadcrumb-item text-gray-500">
                            @Model.ChildName
                        </li>
                    }
                </ul>
            </div>

        </div>
    </div>
</div>
