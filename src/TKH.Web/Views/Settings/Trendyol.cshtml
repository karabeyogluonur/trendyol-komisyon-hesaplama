@model TrendyolSettingsViewModel

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel("Trendyol Ayarları", "Trendyol Ayarları"))

<app-alert type="Info" title="Önemli Bilgilendirme">
    Bu sayfadaki API ayarları entegrasyonun çalışması için kritiktir.
    Maliyet ve kesinti ayarları ise, Trendyol siparişlerinizdeki <strong>net hakediş</strong> hesaplamasında kullanılır.
</app-alert>

<form asp-controller="Settings" asp-action="Trendyol" method="post" id="kt_trendyol_settings_form">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    @Html.AntiForgeryToken()

    <div class="card card-flush">
        <div class="card-header card-header-stretch min-h-50px">
            <div class="card-toolbar">
                <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-7 border-0">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#tab_api_config">
                            <i class="ki-outline ki-shield-tick fs-4 me-2"></i> API Konfigürasyonu
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab_tax_config">
                            <i class="ki-outline ki-percentage fs-4 me-2"></i> Vergi Ayarları
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card-body pt-5">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab_api_config" role="tabpanel">
                    <div class="row mb-5">
                        <div class="col-md-6 fv-row">
                            <label asp-for="BaseUrl" class="required form-label fs-7 fw-semibold"></label>
                            <input asp-for="BaseUrl" class="form-control form-control-sm form-control-solid"
                                placeholder="https://api.trendyol.com/sapigw/suppliers" />
                            <div class="text-muted fs-8 mt-1">Trendyol API servislerinin temel adresi.</div>
                            <span asp-validation-for="BaseUrl" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 fv-row">
                            <label asp-for="UserAgent" class="required form-label fs-7 fw-semibold"></label>
                            <input asp-for="UserAgent" class="form-control form-control-sm form-control-solid" />
                            <div class="text-muted fs-8 mt-1">API isteklerinde gönderilecek entegratör kimliği.</div>
                            <span asp-validation-for="UserAgent" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tab_tax_config" role="tabpanel">
                    <div class="row mb-5">
                        <div class="col-md-4 fv-row">
                            <label asp-for="ServiceFeeAmount" class="required form-label fs-7 fw-semibold"></label>
                            <div class="input-group input-group-sm input-group-solid">
                                <span class="input-group-text">₺</span>
                                <input asp-for="ServiceFeeAmount" class="form-control form-control-solid" type="number"
                                    step="0.01" min="0" />
                            </div>
                            <div class="text-muted fs-8 mt-1">Her sipariş için Trendyol tarafından kesilen sabit işlem
                                ücreti.</div>
                            <span asp-validation-for="ServiceFeeAmount" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 fv-row">
                            <label asp-for="ServiceFeeVatRate" class="required form-label fs-7 fw-semibold"></label>
                            <div class="input-group input-group-sm input-group-solid">
                                <input asp-for="ServiceFeeVatRate" class="form-control form-control-solid" type="number"
                                    step="0.01" min="0" max="100" />
                                <span class="input-group-text">%</span>
                            </div>
                            <div class="text-muted fs-8 mt-1">Hizmet bedeli faturalarına uygulanan KDV oranı.</div>
                            <span asp-validation-for="ServiceFeeVatRate" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 fv-row">
                            <label asp-for="ProductCommissionVatRate"
                                class="required form-label fs-7 fw-semibold"></label>
                            <div class="input-group input-group-sm input-group-solid">
                                <input asp-for="ProductCommissionVatRate" class="form-control form-control-solid"
                                    type="number" step="0.01" min="0" max="100" />
                                <span class="input-group-text">%</span>
                            </div>
                            <div class="text-muted fs-8 mt-1">Satış komisyonu için uygulanan KDV oranı.</div>
                            <span asp-validation-for="ProductCommissionVatRate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-4 fv-row">
                            <label asp-for="SameDayServiceFeeAmount"
                                class="required form-label fs-7 fw-semibold"></label>
                            <div class="input-group input-group-sm input-group-solid">
                                <span class="input-group-text">₺</span>
                                <input asp-for="SameDayServiceFeeAmount" class="form-control form-control-solid"
                                    type="number" step="0.01" min="0" />
                            </div>
                            <div class="text-muted fs-8 mt-1">Aynı gün teslimatlı siparişlerde uygulanan hizmet bedeli.
                            </div>
                            <span asp-validation-for="SameDayServiceFeeAmount" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 fv-row">
                            <label asp-for="ExportServiceFeeRate" class="required form-label fs-7 fw-semibold"></label>
                            <div class="input-group input-group-sm input-group-solid">
                                <input asp-for="ExportServiceFeeRate" class="form-control form-control-solid"
                                    type="number" step="0.01" min="0" max="100" />
                                <span class="input-group-text">%</span>
                            </div>
                            <div class="text-muted fs-8 mt-1">Mikro ihracat siparişlerinde uygulanan komisyon oranı.
                            </div>
                            <span asp-validation-for="ExportServiceFeeRate" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 fv-row">
                            <label asp-for="ExportServiceFeeVatRate"
                                class="required form-label fs-7 fw-semibold"></label>
                            <div class="input-group input-group-sm input-group-solid">
                                <input asp-for="ExportServiceFeeVatRate" class="form-control form-control-solid"
                                    type="number" step="0.01" min="0" max="100" />
                                <span class="input-group-text">%</span>
                            </div>
                            <div class="text-muted fs-8 mt-1">E-İhracat hizmet bedeli için uygulanan KDV oranı.</div>
                            <span asp-validation-for="ExportServiceFeeVatRate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a href="/" class="btn btn-sm btn-light me-3">Vazgeç</a>
            <app-submit-button text="Ayarları Kaydet" id="kt_btn_submit" />
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#kt_trendyol_settings_form").submit(function () {
                if ($(this).valid()) {
                    var btn = $("#kt_btn_submit");
                    btn.attr("data-kt-indicator", "on");
                    btn.prop("disabled", true);
                }
            });
        });
    </script>
}
