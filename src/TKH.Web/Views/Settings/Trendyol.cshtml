@model TrendyolSettingsViewModel

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-4 text-gray-900 mb-0">
                        Trendyol Ayarları
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-gray-600 text-hover-primary">Anasayfa</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="text-gray-600">Ayarlar</span>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-gray-800 fw-semibold">
                            Trendyol
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div
    class="alert alert-dismissible bg-light-primary border border-primary border-dashed d-flex flex-column flex-sm-row p-5 mb-5">
    <i class="ki-outline ki-information-5 fs-2hx text-primary me-4 mb-5 mb-sm-0 flex-shrink-0"></i>
    <div class="d-flex flex-column pe-0 pe-sm-10">
        <h5 class="mb-1 fs-6 text-primary">Önemli Bilgilendirme</h5>
        <span class="fs-7 text-gray-600">
            Bu sayfadaki API ayarları entegrasyonun çalışması için kritiktir.
            Maliyet ve kesinti ayarları ise, Trendyol siparişlerinizdeki <strong>net hakediş</strong> hesaplamasında
            kullanılır.
        </span>
    </div>
</div>

<form asp-controller="Settings" asp-action="Trendyol" method="post" id="kt_trendyol_settings_form">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    @Html.AntiForgeryToken()

    <div class="card card-flush">
        <div class="card-body pt-5">

            <h5 class="fw-bold text-gray-800 mb-5">API Bağlantı Bilgileri</h5>
            <div class="row mb-10">
                <div class="col-md-6 fv-row">
                    <label asp-for="BaseUrl" class="required form-label fs-7 fw-semibold"></label>
                    <input asp-for="BaseUrl" class="form-control form-control-sm"
                        placeholder="https://api.trendyol.com/sapigw/suppliers" />
                    <div class="text-muted fs-8 mt-1">Trendyol API servislerinin temel adresi.</div>
                    <span asp-validation-for="BaseUrl" class="text-danger"></span>
                </div>

                <div class="col-md-6 fv-row">
                    <label asp-for="UserAgent" class="required form-label fs-7 fw-semibold"></label>
                    <input asp-for="UserAgent" class="form-control form-control-sm" />
                    <div class="text-muted fs-8 mt-1">API isteklerinde gönderilecek entegratör kimliği (Partner ID - App
                        Name).</div>
                    <span asp-validation-for="UserAgent" class="text-danger"></span>
                </div>
            </div>

            <div class="separator separator-dashed my-5"></div>

            <h5 class="fw-bold text-gray-800 mb-5">Hizmet Bedelleri ve Kesintiler</h5>

            <div class="row mb-5">
                <div class="col-md-4 fv-row">
                    <label asp-for="ServiceFeeAmount" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text">₺</span>
                        <input asp-for="ServiceFeeAmount" class="form-control" type="number" step="0.01" min="0" />
                    </div>
                    <div class="text-muted fs-8 mt-1">Her sipariş için Trendyol tarafından kesilen sabit işlem ücreti.
                    </div>
                    <span asp-validation-for="ServiceFeeAmount" class="text-danger"></span>
                </div>

                <div class="col-md-4 fv-row">
                    <label asp-for="ServiceFeeVatRate" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm">
                        <input asp-for="ServiceFeeVatRate" class="form-control" type="number" step="0.01" min="0"
                            max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="text-muted fs-8 mt-1">Hizmet bedeli faturalarına uygulanan KDV oranı.</div>
                    <span asp-validation-for="ServiceFeeVatRate" class="text-danger"></span>
                </div>

                <div class="col-md-4 fv-row">
                    <label asp-for="ProductCommissionVatRate" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm">
                        <input asp-for="ProductCommissionVatRate" class="form-control" type="number" step="0.01" min="0"
                            max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="text-muted fs-8 mt-1">Satış komisyonu için uygulanan KDV oranı.</div>
                    <span asp-validation-for="ProductCommissionVatRate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-md-4 fv-row">
                    <label asp-for="SameDayServiceFeeAmount" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text">₺</span>
                        <input asp-for="SameDayServiceFeeAmount" class="form-control" type="number" step="0.01"
                            min="0" />
                    </div>
                    <div class="text-muted fs-8 mt-1">Aynı gün teslimatlı siparişlerde hizmet bedeli olarak Trendyol
                        Hizmet Bedeli yerine uygulanır. </div>
                    <span asp-validation-for="SameDayServiceFeeAmount" class="text-danger"></span>
                </div>

                <div class="col-md-4 fv-row">
                    <label asp-for="ExportServiceFeeRate" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm">
                        <input asp-for="ExportServiceFeeRate" class="form-control" type="number" step="0.01" min="0"
                            max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="text-muted fs-8 mt-1">Mikro ihracat siparişlerinde uygulanan uluslararası hizmet
                        komisyon oranı.</div>
                    <span asp-validation-for="ExportServiceFeeRate" class="text-danger"></span>
                </div>

                <div class="col-md-4 fv-row">
                    <label asp-for="ExportServiceFeeVatRate" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm">
                        <input asp-for="ExportServiceFeeVatRate" class="form-control" type="number" step="0.01" min="0"
                            max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="text-muted fs-8 mt-1">E-İhracat hizmet bedeli için uygulanan KDV oranı.</div>
                    <span asp-validation-for="ExportServiceFeeVatRate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a href="/" class="btn btn-sm btn-light me-3">Vazgeç</a>

            <button type="submit" class="btn btn-sm btn-primary" id="kt_btn_submit">
                <span class="indicator-label">Ayarları Kaydet</span>
                <span class="indicator-progress">
                    Lütfen bekleyin...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#kt_trendyol_settings_form").submit(function () {
                if ($(this).valid()) {
                    var btn = $("#kt_btn_submit");
                    btn.attr("data-kt-indicator", "on");
                    btn.prop("disabled", true);
                }
            });
        });
    </script>
}
