@model TaxSettingsViewModel


@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel("Vergi Ayarları", "Vergi Ayarları"))

<app-alert type="Info" title="Önemli Bilgilendirme">
    Burada yapacağınız değişiklikler, sistemdeki <strong>net kar hesaplamalarını</strong> doğrudan etkileyecektir.
    Değişiklik yaptıktan sonra hesaplamaların güncellenmesi için ilgili raporları yenilemeniz gerekebilir.
</app-alert>

<form asp-controller="Settings" asp-action="Tax" method="post" id="kt_tax_settings_form">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    @Html.AntiForgeryToken()

    <div class="card card-flush">
        <div class="card-body pt-5">

            <div class="row mb-5">
                <div class="col-md-6 fv-row">
                    <label asp-for="WithholdingRate" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm input-group-solid">
                        <input asp-for="WithholdingRate" class="form-control form-control-sm form-control-solid"
                            type="number" step="0.01" min="0" max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="text-muted fs-8 mt-1">Pazaryeri hakedişlerinden kesilen gelir vergisi stopaj oranı.
                    </div>
                    <span asp-validation-for="WithholdingRate" class="text-danger"></span>
                </div>

                <div class="col-md-6 fv-row">
                    <label asp-for="ShippingVatRate" class="required form-label fs-7 fw-semibold"></label>
                    <div class="input-group input-group-sm input-group-solid">
                        <input asp-for="ShippingVatRate" class="form-control form-control-sm form-control-solid "
                            type="number" step="0.01" min="0" max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="text-muted fs-8 mt-1">Kargo faturalarına uygulanan KDV oranı (Genellikle %20).</div>
                    <span asp-validation-for="ShippingVatRate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a href="/" class="btn btn-sm btn-light me-3">Vazgeç</a>

            <app-submit-button text="Ayarları Kaydet" id="kt_btn_submit" />
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#kt_tax_settings_form").submit(function () {
                if ($(this).valid()) {
                    var btn = $("#kt_btn_submit");
                    btn.attr("data-kt-indicator", "on");
                    btn.prop("disabled", true);
                }
            });
        });
    </script>
}
