@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel("Komisyon Hesaplama", "Araçlar", "Komisyon Hesaplama"))

<form id="kt_calculator_form" data-rate-withholding="@TaxSettings.WithholdingRate.ToPercentageRate()"
    data-rate-shipping-vat="@TaxSettings.ShippingVatRate.ToPercentageRate()"
    data-rate-commission-vat="@TrendyolSettings.ProductCommissionVatRate.ToPercentageRate()"
    data-rate-export="@TrendyolSettings.ExportServiceFeeRate.ToPercentageRate()"
    data-rate-export-vat="@TrendyolSettings.ExportServiceFeeVatRate.ToPercentageRate()"
    data-rate-service-fee-vat="@TrendyolSettings.ServiceFeeVatRate.ToPercentageRate()"
    data-fee-standard="@TrendyolSettings.ServiceFeeAmount.ToJsFormat()"
    data-fee-sameday="@TrendyolSettings.SameDayServiceFeeAmount.ToJsFormat()" onsubmit="return false;">

    <div class="card mb-5 shadow-sm">
        <div class="card-body">
            <div class="row g-5 g-lg-9 mb-8">
                <div class="col-md-6">
                    <label class="required form-label fs-7 fw-bold mb-2">Satış Fiyatı (KDV Dahil)</label>
                    <div class="input-group input-group-sm input-group-solid">
                        <input type="text" class="form-control money-input" id="salesPrice" value="500,00" />
                        <span class="input-group-text">₺</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="required form-label fs-7 fw-bold mb-2">Alış Fiyatı (KDV Dahil)</label>
                    <div class="input-group input-group-sm input-group-solid">
                        <input type="text" class="form-control money-input" id="purchasePrice" value="100,00" />
                        <span class="input-group-text">₺</span>
                    </div>
                </div>
            </div>

            <div class="row g-5 g-lg-9 mb-8">
                <div class="col-md-4">
                    <label class="required form-label fs-7 fw-bold mb-2">Komisyon Oranı</label>
                    <div class="input-group input-group-sm input-group-solid">
                        <input type="number" class="form-control" id="commissionRate" value="20" />
                        <span class="input-group-text">%</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="required form-label fs-7 fw-bold mb-2">Ürün KDV Oranı</label>
                    <select class="form-select form-select-sm form-select-solid fs-7" id="vatRate"
                        data-control="select2" data-hide-search="true">
                        <option value="1">1%</option>
                        <option value="10">10%</option>
                        <option value="20" selected>20%</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="required form-label fs-7 fw-bold mb-2">Kargo Ücreti (KDV Dahil)</label>
                    <div class="input-group input-group-sm input-group-solid">
                        <input type="text" class="form-control money-input" id="shippingCost" value="50,00" />
                        <span class="input-group-text">₺</span>
                    </div>
                </div>
            </div>

            <div class="row mb-8">
                <div class="col-12">
                    <div
                        class="d-flex align-items-center gap-10 p-5 rounded border border-dashed border-gray-300 bg-light-secondary">
                        <div class="form-check form-check-custom form-check-solid">
                            <input class="form-check-input h-20px w-20px" type="checkbox" id="chkExport" />
                            <label class="form-check-label fw-bold text-gray-800 fs-7" for="chkExport">E-İhracat</label>
                        </div>
                        <div class="form-check form-check-custom form-check-solid">
                            <input class="form-check-input h-20px w-20px" type="checkbox" id="chkSameDayShipping" />
                            <label class="form-check-label fw-bold text-gray-800 fs-7" for="chkSameDayShipping">Aynı Gün
                                Teslimat</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-sm btn-primary" id="btnCalculate">
                    <span class="indicator-label"><i class="ki-outline ki-calculator fs-4 me-1"></i> Hesapla</span>
                </button>
            </div>
        </div>
    </div>
</form>

<div id="resultSection" class="d-none">
    <div class="row g-5 mb-5">
        <div class="col-xl-4 col-md-4">
            <div class="card bg-success card-xl-stretch mb-xl-8 py-5">
                <div class="card-body">
                    <div class="text-white fw-bold fs-1 mb-1" id="lblNetProfit" data-calc-result="netProfit">0,00 ₺
                    </div>
                    <div class="fw-semibold text-white fs-7">Net Kâr</div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-4">
            <div class="card bg-dark card-xl-stretch mb-xl-8 py-5">
                <div class="card-body">
                    <div class="text-white fw-bold fs-1 mb-1" id="lblRoiRate" data-calc-result="roi">% 0</div>
                    <div class="fw-semibold text-white fs-7">Kâr Oranı (ROI)</div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-4">
            <div class="card bg-warning card-xl-stretch mb-xl-8 py-5">
                <div class="card-body">
                    <div class="text-white fw-bold fs-1 mb-1" id="lblPayableVat" data-calc-result="netVatBalance">0,00 ₺
                    </div>
                    <div class="fw-semibold text-white fs-7" id="lblVatTitle">Ödenecek KDV</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5 mb-5 d-none" id="chartsSection">
        <div class="col-xl-6">
            <div class="card card-flush h-md-100">
                <div class="card-body">
                    <div id="kt_charts_revenue_distribution" style="height: 300px;"></div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card card-flush h-md-100">
                <div class="card-body">
                    <div id="kt_charts_expense_breakdown" style="height: 300px;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="card card-flush shadow-sm">
        <div class="card-header pt-5 min-h-auto">
            <h3 class="card-title align-items-start flex-column">
                <span class="card-label fw-bold text-gray-900 fs-6">Hesaplama Detayları</span>
                <span class="text-muted mt-1 fw-semibold fs-8">Gelir ve Gider Dağılımı</span>
            </h3>
        </div>
        <div class="card-body pt-3">
            <div class="table-responsive">
                <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                    <thead>
                        <tr class="fw-bold text-muted bg-light fs-8 text-uppercase">
                            <th class="ps-4 min-w-150px rounded-start">Kalem</th>
                            <th class="min-w-100px text-end">Tutar (KDV Dahil)</th>
                            <th class="min-w-100px text-end">İçindeki KDV</th>
                            <th class="min-w-100px text-end rounded-end pe-4">Net Tutar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-35px me-4">
                                        <span class="symbol-label bg-light-primary">
                                            <i class="ki-outline ki-basket fs-2 text-primary"></i>
                                        </span>
                                    </div>
                                    <span class="text-gray-900 fw-bold fs-7">Satış Geliri</span>
                                </div>
                            </td>
                            <td class="text-end fw-bold text-gray-800" data-calc-result="salesPrice"></td>
                            <td class="text-end text-danger" data-calc-result="salesVat"></td>
                            <td class="text-end fw-bold text-primary" data-calc-result="salesExclVat"></td>
                        </tr>

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-35px me-4">
                                        <span class="symbol-label bg-light-danger">
                                            <i class="ki-outline ki-tag fs-2 text-danger"></i>
                                        </span>
                                    </div>
                                    <span class="text-gray-900 fw-bold fs-7">Ürün Maliyeti</span>
                                </div>
                            </td>
                            <td class="text-end fw-bold text-gray-800" data-calc-result="purchasePrice"></td>
                            <td class="text-end text-success" data-calc-result="costVat"></td>
                            <td class="text-end text-gray-600" data-calc-result="costBase"></td>
                        </tr>

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-35px me-4">
                                        <span class="symbol-label bg-light-info">
                                            <i class="ki-outline ki-discount fs-2 text-info"></i>
                                        </span>
                                    </div>
                                    <span class="text-gray-900 fw-bold fs-7">Pazaryeri Komisyonu</span>
                                </div>
                            </td>
                            <td class="text-end fw-bold text-gray-800" data-calc-result="commissionTotal"></td>
                            <td class="text-end text-success" data-calc-result="commissionVat"></td>
                            <td class="text-end text-gray-600" data-calc-result="commissionBase"></td>
                        </tr>

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-35px me-4">
                                        <span class="symbol-label bg-light-warning">
                                            <i class="ki-outline ki-truck fs-2 text-warning"></i>
                                        </span>
                                    </div>
                                    <span class="text-gray-900 fw-bold fs-7">Kargo Gideri</span>
                                </div>
                            </td>
                            <td class="text-end fw-bold text-gray-800" data-calc-result="shippingCost"></td>
                            <td class="text-end text-success" data-calc-result="shippingVat"></td>
                            <td class="text-end text-gray-600" data-calc-result="shippingBase"></td>
                        </tr>

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-35px me-4">
                                        <span class="symbol-label bg-light-secondary">
                                            <i class="ki-outline ki-bank fs-2 text-gray-600"></i>
                                        </span>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="text-gray-900 fw-bold fs-7">Hizmet Bedeli</span>
                                        <span id="lblServiceFeeDesc" class="fs-9 text-muted fw-normal"></span>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end fw-bold text-gray-800" data-calc-result="serviceFeeTotal"></td>
                            <td class="text-end text-success" data-calc-result="serviceFeeVat"></td>
                            <td class="text-end text-gray-600" data-calc-result="serviceFeeBase"></td>
                        </tr>

                        <tr id="rowExport" class="d-none">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-35px me-4">
                                        <span class="symbol-label bg-light-success">
                                            <i class="ki-outline ki-airplane fs-2 text-success"></i>
                                        </span>
                                    </div>
                                    <span class="text-gray-900 fw-bold fs-7 text-success">İhracat Bedeli</span>
                                </div>
                            </td>
                            <td class="text-end fw-bold text-gray-800" data-calc-result="exportTotal"></td>
                            <td class="text-end text-success" data-calc-result="exportVat"></td>
                            <td class="text-end text-gray-600" data-calc-result="exportBase"></td>
                        </tr>

                        <tr>
                            <td class="ps-4 pe-4">
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-35px me-4">
                                        <span class="symbol-label bg-light-danger">
                                            <i class="ki-outline ki-graph-up fs-2 text-danger"></i>
                                        </span>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="text-gray-900 fw-bold fs-7">Stopaj (Tahmini)</span>
                                        <span class="fs-9 text-muted fw-normal">Gelir Vergisi Tevkifatı</span>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end fw-bold text-gray-800" data-calc-result="withholdingTax"></td>
                            <td class="text-end text-muted pe-4">-</td>
                            <td class="text-end text-gray-600 pe-4" data-calc-result="withholdingTax"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/pages/tools/product-profit-calculator.js"></script>
}
