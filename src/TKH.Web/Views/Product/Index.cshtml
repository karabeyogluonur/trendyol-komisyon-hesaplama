@model ProductListViewModel

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel("Ürün Yönetimi", "Ürün Yönetimi"))

<div class="card card-flush">
    <div class="card-header border-0 pt-6">
        <form method="get" class="w-100" id="filterForm">
            <input type="hidden" name="PageIndex" value="1" />
            <div class="row g-5 align-items-end">

                <div class="col-12 col-md-3">
                    <label class="form-label fs-7 fw-bold text-gray-700">Barkod</label>
                    <div class="position-relative">
                        <i class="ki-outline ki-magnifier fs-3 position-absolute top-50 translate-middle-y ms-4"></i>
                        <input type="text" asp-for="Filter.Barcode" name="Barcode"
                            class="form-control form-control-sm form-control-solid ps-12" placeholder="Barkod Ara.." />
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-md-3">
                    <label class="form-label fs-7 fw-bold text-gray-700">Kategori</label>
                    <app-filter-select asp-for="Filter.CategoryId" asp-items="Model.Filter.Categories" all-text="Tümü"
                        class="form-select form-select-sm form-select-solid" data-control="select2" />
                </div>

                <div class="col-12 col-sm-6 col-md-2">
                    <label class="form-label fs-7 fw-bold text-gray-700">Stok Durumu</label>
                    <app-filter-select asp-for="Filter.HasStock" true-text="Stokta Var" false-text="Stok Yok"
                        all-text="Tümü" class="form-select form-select-sm form-select-solid" data-control="select2"
                        data-hide-search="true" />
                </div>

                <div class="col-12 col-sm-6 col-md-2">
                    <label class="form-label fs-7 fw-bold text-gray-700">Satış Durumu</label>
                    <app-filter-select asp-for="Filter.IsOnSale" true-text="Satışa Açık" false-text="Satışa Kapalı"
                        all-text="Tümü" class="form-select form-select-sm form-select-solid" data-control="select2"
                        data-hide-search="true" />
                </div>

                <div class="col-12 col-md-4 col-lg-2 d-flex gap-2 justify-content-md-end">
                    <button type="submit" class="btn btn-sm btn-primary w-100">
                        <i class="ki-outline ki-filter fs-4 me-1"></i> Uygula
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-light w-100" title="Temizle">
                        <i class="ki-outline ki-arrows-circle fs-4 me-1"></i> Temizle
                    </a>
                </div>
            </div>
        </form>
    </div>

    <div class="separator separator-dashed my-5"></div>

    <div class="card-body pt-0">
        <div class="table-responsive">
            <table class="table align-middle table-row-dashed fs-6 gy-5">
                <thead>
                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                        <th class="min-w-250px">Ürün</th>
                        <th class="min-w-200px">Kategori</th>
                        <th class="min-w-120px">Barkod / SKU</th>
                        <th class="min-w-100px">Fiyat</th>
                        <th class="min-w-100px">Stok</th>
                        <th class="text-end min-w-125px">Durum</th>
                    </tr>
                </thead>
                <tbody class="fw-semibold text-gray-600">
                    @if (Model.Products is not null && Model.Products.Items.Any())
                    {
                        foreach (var product in Model.Products.Items)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <a href="@product.ExternalUrl" target="_blank" class="symbol symbol-60px me-4">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <span class="symbol-label" style="background-image:url(@product.ImageUrl);"></span>
                                            }
                                            else
                                            {
                                                <span class="symbol-label bg-light-primary text-primary fw-bold fs-2">
                                                    @product.Name?.Substring(0, 1)
                                                </span>
                                            }
                                        </a>
                                        <div class="d-flex flex-column">
                                            <span class="text-gray-800 fw-bold fs-7" title="@product.Name">
                                                @product.Name.Truncate(50)
                                            </span>
                                            <span class="text-muted fs-8">@product.VariantSummary</span>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="fs-7">@product.CategoryName</span></td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="text-dark fw-bold">@product.Barcode</span>
                                        <span class="text-muted fs-9">@product.Sku</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-gray-800 fw-bold fs-6">@product.SellingPrice.ToString("N2") ₺</span>
                                    @if (product.ListPrice > product.SellingPrice)
                                    {
                                        <span class="text-gray-400 text-decoration-line-through fs-9 d-block">
                                            @product.ListPrice.ToString("N2")
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-light-@product.StockStatusClass px-3 py-2 fs-7">
                                        @product.StockQuantity
                                    </span>
                                    @if (product.IsLocked)
                                    {
                                        <i class="ki-outline ki-lock fs-5 text-warning ms-1" title="Kilitli"></i>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex flex-column gap-2 align-items-end">
                                        <span
                                            class="badge badge-light-@(product.IsApproved ? "success" : "warning") w-100px py-3 justify-content-center">
                                            @(product.IsApproved ? "Onaylı" : "Onay Bekliyor")
                                        </span>
                                        <span
                                            class="badge badge-light-@(product.IsOnSale ? "primary" : "danger") w-100px py-3 justify-content-center">
                                            @(product.IsOnSale ? "Satışta" : "Satışa Kapalı")
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-10">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="ki-outline ki-magnifier fs-3x text-gray-300 mb-4"></i>
                                    <span class="text-gray-500 fw-semibold fs-5">
                                        Aradığınız kriterlere uygun kayıt bulunamadı.
                                    </span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <app-pagination model="@Model.Products" controller="Product" action="Index" form-id="filterForm" />
    </div>
</div>
