@model MarketplaceAccountUpdateViewModel

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel("Pazaryeri Hesap Yönetimi", "Pazaryeri Hesapları",
"Düzenle"))

<form asp-controller="MarketplaceAccount" asp-action="Edit" method="post" id="kt_marketplace_edit_form">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    @if (Model.IsDemo)
    {
        <app-alert type="Warning" icon="ki-lock-2" title="Demo Modu Aktif">
            Bu hesap <strong>Demo Modunda</strong> olduğu için API anahtarları ve kritik ayarlar üzerinde değişiklik
            yapamazsınız.
            Sadece mevcut konfigürasyonu görüntüleyebilirsiniz.
        </app-alert>
    }

    @if (Model.SyncState == MarketplaceSyncState.Syncing || Model.SyncState == MarketplaceSyncState.Queued)
    {
        <app-alert type="Primary" icon="@(Model.SyncState == MarketplaceSyncState.Syncing ? "" : "ki-time")"
            title="Veri Eşitlemesi Sürüyor">
            @if (Model.SyncState == MarketplaceSyncState.Syncing)
            {
                <div class="spinner-border text-primary w-20px h-20px me-3 align-middle" role="status"></div>
            }
            Şu anda arka planda veri senkronizasyonu devam etmektedir (veya sırada beklemektedir).
            Veri tutarlılığı için bu süreçte <strong>düzenleme yapılması kısıtlanmıştır.</strong>
            Lütfen işlem bittikten sonra tekrar deneyiniz.
        </app-alert>
    }
    else if (Model.ConnectionState == MarketplaceConnectionState.AuthError)
    {
        <app-alert type="Error" icon="ki-shield-cross" title="Bağlantı Hatası Tespit Edildi">
            <span class="d-block mb-2">Entegrasyon şu anda çalışmıyor. Son alınan hata mesajı aşağıdadır:</span>

            <div class="bg-white rounded border border-danger border-dashed p-3 text-danger fw-semibold fs-7 mb-2">
                @Model.LastErrorMessage
            </div>

            Lütfen <strong>API Konfigürasyonu</strong> sekmesinden API anahtarlarınızı kontrol edip güncelleyiniz.
        </app-alert>
    }
    else if (Model.ConnectionState == MarketplaceConnectionState.Initializing)
    {
        <app-alert type="Warning" icon="ki-arrows-circle" title="Kurulum Bekliyor">
            Hesap bilgileri güncellendi veya yeni eklendi. Sistem kısa süre içinde bağlantıyı test edip ilk veri çekimini
            başlatacaktır.
        </app-alert>
    }

    <div class="card card-flush">
        <div class="card-header card-header-stretch min-h-50px">
            <div class="card-toolbar">
                <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-7 border-0">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#tab_general">
                            <i class="ki-outline ki-setting-2 fs-4 me-2"></i> Genel Ayarlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab_api_config">
                            <i class="ki-outline ki-shield-tick fs-4 me-2"></i> API Konfigürasyonu
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card-body pt-5">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab_general" role="tabpanel">
                    <div class="row mb-5">
                        <div class="col-md-6 fv-row">
                            <label asp-for="MarketplaceType" class="required form-label fs-7 fw-semibold"></label>
                            <select asp-for="MarketplaceType" asp-items="Html.GetEnumSelectList<MarketplaceType>()"
                                class="form-select form-select-sm form-select-solid" data-control="select2"
                                data-placeholder="Seçiniz...">
                            </select>
                            <span asp-validation-for="MarketplaceType" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 fv-row">
                            <label asp-for="IsActive" class="form-label fs-7 fw-semibold"></label>
                            <div class="form-check form-switch form-check-custom form-check-solid mt-1">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" asp-for="IsActive">
                                    Entegrasyon Aktif
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-12 fv-row">
                            <label asp-for="StoreName" class="required form-label fs-7 fw-semibold"></label>
                            <input asp-for="StoreName" class="form-control form-control-sm" maxlength="50" />
                            <span asp-validation-for="StoreName" class="text-danger fs-8"></span>
                        </div>
                    </div>

                    <app-alert type="Primary" icon="ki-information-5" title="Bilgilendirme">
                        Mağaza adını değiştirmek, geçmiş sipariş verilerini etkilemez. Sadece paneldeki görünür ismi
                        günceller.
                    </app-alert>
                </div>

                <div class="tab-pane fade" id="tab_api_config" role="tabpanel">
                    <div class="row mb-5">
                        <div class="col-md-12 fv-row">
                            <label asp-for="MerchantId" class="required form-label fs-7 fw-semibold"></label>
                            <input asp-for="MerchantId" class="form-control form-control-sm" />
                            <div class="text-muted fs-8 mt-1">Trendyol/HB panelinde 'Satıcı ID' olarak geçer.</div>
                            <span asp-validation-for="MerchantId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-6 fv-row">
                            <label asp-for="ApiKey" class="required form-label fs-7 fw-semibold"></label>
                            <input asp-for="ApiKey" class="form-control form-control-sm" autocomplete="off"
                                disabled="@(Model.IsDemo ? "disabled" : null)" />
                            <span asp-validation-for="ApiKey" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 fv-row">
                            <label asp-for="ApiSecretKey" class="form-label fs-7 fw-semibold"></label>
                            <input asp-for="ApiSecretKey" type="password" class="form-control form-control-sm"
                                placeholder="" autocomplete="new-password"
                                disabled="@(Model.IsDemo ? "disabled" : null)" />
                            <div class="text-muted fs-8 mt-1">
                                Gizli anahtarınız güvenlik nedeniyle maskelenmiştir.
                            </div>
                            <span asp-validation-for="ApiSecretKey" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a asp-action="Index" class="btn btn-sm btn-light me-3">Vazgeç</a>

            @if (Model.SyncState != MarketplaceSyncState.Idle)
            {
                <button type="button" class="btn btn-sm btn-secondary" disabled>
                    <span class="spinner-border spinner-border-sm align-middle me-2"></span>
                    İşlem Sürüyor...
                </button>
            }
            else if (Model.IsDemo)
            {
                <span data-bs-toggle="tooltip" title="Demo hesaplarda düzenleme yapılamaz">
                    <button type="button" class="btn btn-sm btn-primary opacity-50" disabled>
                        <i class="ki-outline ki-lock fs-5 me-1"></i>
                        Salt Okunur
                    </button>
                </span>
            }
            else
            {
                <button type="submit" class="btn btn-sm btn-primary" id="kt_btn_submit">
                    <span class="indicator-label">Değişiklikleri Kaydet</span>
                    <span class="indicator-progress">
                        Lütfen bekleyin...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            }
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#kt_marketplace_edit_form").submit(function () {
                if ($(this).valid()) {
                    var btn = $("#kt_btn_submit");
                    btn.attr("data-kt-indicator", "on");
                    btn.prop("disabled", true);
                }
            });
        });
    </script>
}
