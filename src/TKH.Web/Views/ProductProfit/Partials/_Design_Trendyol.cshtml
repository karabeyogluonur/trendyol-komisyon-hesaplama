@model ProductProfitListViewModel

<div class="row g-6 g-xl-9" id="profit-analysis-container" data-rate-withholding="@Model.WithholdingRate.ToJsFormat()"
    data-rate-shipping-vat="@Model.ShippingVatRate.ToJsFormat()"
    data-rate-commission-vat="@Model.MarketplaceDefaults.Metadata.GetJsDecimal("ProductCommissionVatRate")"
    data-rate-service-vat="@Model.MarketplaceDefaults.ServiceFeeVatRate.ToJsFormat()"
    data-rate-export="@Model.MarketplaceDefaults.Metadata.GetJsDecimal("ExportServiceFeeRate")"
    data-rate-export-vat="@Model.MarketplaceDefaults.Metadata.GetJsDecimal("ExportServiceFeeVatRate")"
    data-fee-standard="@Model.MarketplaceDefaults.ServiceFee.ToJsFormat()"
    data-fee-sameday="@Model.MarketplaceDefaults.Metadata.GetJsDecimal("SameDayServiceFee")">

    @foreach (var item in Model.Products.Items)
    {
        <div class="col-md-6 col-xxl-4">
            <div class="card card-flush h-xl-100 profit-card" data-id="@item.Id" data-vat-rate="@item.VatRate.ToJsFormat()"
                data-service-fee="@item.ServiceFee.ToJsFormat()">

                <div class="card-header pt-7">
                    <div class="d-flex align-items-center">
                        <div class="symbol symbol-45px me-4">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <div class="symbol-label" style="background-image:url('@item.ImageUrl');"></div>
                            }
                            else
                            {
                                <div class="symbol-label bg-light-primary text-primary fw-bold fs-4">@item.Name.Substring(0, 1)
                                </div>
                            }
                        </div>
                        <div class="d-flex flex-column">
                            <a href="@item.ExternalUrl" target="_blank"
                                class="text-gray-800 text-hover-primary fs-7 fw-bold">@item.Name.Truncate(30)</a>
                            <div class="text-muted fs-8 fw-bold">@item.Barcode</div>
                        </div>
                    </div>
                </div>

                <div class="card-body pt-5 position-relative">
                    <div class="row g-5 mb-5 calculation-inputs">
                        <div class="col-6">
                            <label class="fs-9 fw-bold form-label text-gray-600">Satış Fiyatı</label>
                            <input type="number" class="form-control form-control-sm form-control-solid calc-input"
                                data-field="salesPrice" value="@item.SalesPrice.ToJsFormat()" step="0.01" />
                        </div>
                        <div class="col-6">
                            <label class="fs-9 fw-bold form-label text-gray-600">Alış Fiyatı</label>
                            <input type="number" class="form-control form-control-sm form-control-solid calc-input"
                                data-field="purchasePrice" value="@item.PurchasePrice.ToJsFormat()" step="0.01" />
                        </div>
                        <div class="col-6">
                            <label class="fs-9 fw-bold form-label text-gray-600">Komisyon (%)</label>
                            <input type="number" class="form-control form-control-sm form-control-solid calc-input"
                                data-field="commissionRate"
                                value="@(item.ManualCommissionRate != 0 ? item.ManualCommissionRate.ToJsFormat() : item.AutomatedCommissionRate.ToJsFormat())"
                                step="0.1" />
                        </div>
                        <div class="col-6">
                            <label class="fs-9 fw-bold form-label text-gray-600">Kargo</label>
                            <input type="number" class="form-control form-control-sm form-control-solid calc-input"
                                data-field="shippingCost"
                                value="@(item.ManualShippingCost != 0 ? item.ManualShippingCost.ToJsFormat() : item.AutomatedShippingCost.ToJsFormat())"
                                step="0.01" />
                        </div>
                    </div>

                    <div class="separator separator-dashed my-4"></div>

                    <div class="calculation-container position-relative min-h-150px">

                        <div class="results-area d-flex flex-column gap-3">
                            <div class="d-flex align-items-center bg-light-info rounded p-3">
                                <span class="ki-outline ki-shop fs-2 text-info me-3"></span>
                                <div class="flex-grow-1">
                                    <div class="fw-bold fs-7 text-gray-800">Normal Satış</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bolder fs-6" data-calc-result="profit-NORMAL">0.00 ₺</div>
                                    <span class="badge badge-light-info fw-bold fs-9" data-calc-result="roi-NORMAL">%
                                        0</span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center bg-light-warning rounded p-3">
                                <span class="ki-outline ki-delivery-3 fs-2 text-warning me-3"></span>
                                <div class="flex-grow-1">
                                    <div class="fw-bold fs-7 text-gray-800">Aynı Gün</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bolder fs-6" data-calc-result="profit-SAMEDAY">0.00 ₺</div>
                                    <span class="badge badge-light-warning fw-bold fs-9" data-calc-result="roi-SAMEDAY">%
                                        0</span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center bg-light-success rounded p-3">
                                <span class="ki-outline ki-geolocation fs-2 text-success me-3"></span>
                                <div class="flex-grow-1">
                                    <div class="fw-bold fs-7 text-gray-800">E-İhracat</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bolder fs-6" data-calc-result="profit-EXPORT">0.00 ₺</div>
                                    <span class="badge badge-light-success fw-bold fs-9" data-calc-result="roi-EXPORT">%
                                        0</span>
                                </div>
                            </div>
                        </div>

                        <div class="empty-area d-none position-absolute top-0 start-0 w-100 h-100 bg-body bg-opacity-75 d-flex align-items-center justify-content-center rounded z-index-1"
                            style="backdrop-filter: blur(1px);">
                            <div class="text-center p-5">
                                <i class="ki-outline ki-information-5 fs-2x text-gray-400 mb-2"></i>
                                <div class="text-gray-500 fs-8 fw-bold">Eksik veri girişi sebebiyle<br>hesaplama
                                    yapılamıyor.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
