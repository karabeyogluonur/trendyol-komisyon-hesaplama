@{
    Layout = "_Root";
}

<div class="d-flex flex-column flex-root"
    style="background-image: url('/themes/metronic/assets/media/auth/bg1.jpg'); background-size: cover; background-position: center;">

    <div class="d-flex flex-column flex-center flex-column-fluid">
        <div class="container p-10">

            <div class="row align-items-center">

                <div class="col-lg-6 pe-lg-10 text-center text-lg-start mb-10 mb-lg-0">

                    <div class="mb-10">
                        <a href="/">
                            <img alt="Logo" src="~/themes/metronic/assets/media/logos/logo-white.png"
                                class="h-40px h-lg-50px theme-light-show" />
                            <img alt="Logo" src="~/themes/metronic/assets/media/logos/logo-black.png"
                                class="h-40px h-lg-50px theme-dark-show" />
                        </a>
                    </div>

                    <h1 class="fw-bolder text-gray-900 mb-2 fs-5">
                        BEKLENMEDİK HATA
                    </h1>

                    <div class="fw-semibold fs-7 text-gray-600 mb-10">
                        Sunucu tarafında teknik bir sorunla karşılaştık.<br class="d-none d-lg-block" />
                        Lütfen biraz bekleyip tekrar deneyin veya yönetici ile iletişime geçin.
                    </div>

                    <div>
                        <a href="/" class="btn btn-primary btn-lg hover-scale fs-8">
                            <i class="ki-duotone ki-arrow-left fs-6 me-2">
                                <span class="path1"></span><span class="path2"></span>
                            </i>
                            Ana Sayfaya Dön
                        </a>
                    </div>
                </div>

                <div class="col-lg-6 text-center">

                    <div class="card card-flush border-0 bg-transparent shadow-none">
                        <div class="card-body d-flex justify-content-center align-items-center">

                            <div class="position-relative d-inline-block">
                                <span class="position-absolute top-50 start-50 translate-middle text-primary opacity-10"
                                    style="font-size: 15rem;">
                                    <i class="ki-duotone ki-shield-cross" style="font-size: inherit;">
                                        <span class="path1"></span><span class="path2"></span><span
                                            class="path3"></span>
                                    </i>
                                </span>

                                <h1 class="fw-bolder text-gray-900 position-relative z-index-1"
                                    style="font-size: 9rem; line-height: 1; letter-spacing: -5px;">
                                    500
                                </h1>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
